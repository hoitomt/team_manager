<div class="mt-3">
  <div class="float-left">
    <h2>Photos</h2>
  </div>
  <div class="float-right ml-3">
    <p class="small m-0">For best results image height should be: 350px - 1000px</p>
    <p class="small m-0">Home Page photos should be 0.67 (width to height)</p>
    <p class="small m-0">Player Profile photos should be 0.67 (width to height)</p>
  </div>
  <div class="float-right">
    <%= link_to 'Add', new_site_site_photo_path, class:"btn btn-success" %>
  </div>
  <div class="clearfix"></div>
  <hr>
</div>
<div class="row photos">
  <div class="clearfix"></div>
  <% @site_photos.each do |photo| %>
    <div class="col-sm-3 m-2">
      <%= image_tag photo.image.url, class: 'tm-player-image' %>
      <div>
        <%= simple_form_for photo, url: site_site_photo_path(photo) do |f| %>
          <%= f.input :about_page, input_html: {onchange: 'handlePhotoAboutPageCheckbox(this);', 'data-update_site_photo' => site_site_photo_url(photo)} %>
        <% end %>
        <%= link_to 'Delete', site_site_photo_path(photo), method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
