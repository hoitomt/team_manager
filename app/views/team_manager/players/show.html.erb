<div class="mt-3">
  <div class="float-left">
    <h1><%= @player.number %> - <%= @player.name %></h1>
  </div>
  <div class="float-right">
    <%= link_to 'Edit', edit_team_player_path(@team), class:"btn btn-success" %>
  </div>
  <div class="clearfix"></div>
</div>

<div class="row team-player-profile">
  <div class="col-3 left-panel">
    player photo
    <table class="table">
      <tr>
        <th>Number</th>
        <td><%= @player.number %></td>
      </tr>
      <tr>
        <th>Height</th>
        <td><%= @player.height %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= @player.position %></td>
      </tr>
      <tr>
        <th>School</th>
        <td><%= @player.school %></td>
      </tr>
      <tr>
        <th>Year</th>
        <td><%= @player.year %></td>
      </tr>
      <tr>
        <th>GPA</th>
        <td><%= @player.gpa %></td>
      </tr>
    </table>
  </div>

  <div class="col-9 right-panel">
    <h4>Videos</h4>
    <% @player.player_videos do |video| %>
      <div class="col-3">
        <p><%= video.description %></p>
        <% mod_url = video.url.gsub(/youtu\.be/, "www.youtube.com/embed") %>
        <iframe width="560" height="315" style="margin: 10px 0;" src="<%= video.video_url %>" frameborder="0" allowfullscreen></iframe>
      </div>
    <% end %>
    <%= simple_form_for [@team, @player, @player_video] do |f| %>
      <%= f.input :video_url %>
      <%= f.input :description %>
      <%= f.button :submit, class: 'btn btn-success' %>
    <% end %>
    <div class="card mt-3">
      <div class="card-header">
        <h4>Athletic Accomplishments</h4>
      </div>
      <div class="card-body">
        <%= @player.athletic_accomplishments %>
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-header">
        <h4>Colleges Interested</h4>
      </div>
      <div class="card-body">
        <%= @player.colleges_interested %>
      </div>
    </div>
  </div>
</div>

