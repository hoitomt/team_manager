<div class="col-4">
  <div>
    <div class="float-left">
      <span><%= video.description %></span>
    </div>
    <% if user_signed_in? %>
      <div class="float-right">
        <%= link_to 'Edit', edit_team_player_player_video_path(@team, @player, video.id), class:"btn btn-primary btn-sm" %>
        <%= link_to 'Delete', team_player_player_video_path(@team, @player, video.id), method: :delete,  data: { confirm: 'Are you sure you would like to delete this video?' }, class:"btn btn-danger btn-sm" %>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
  <p></p>
  <iframe width="100%" height="225" style="margin: 10px 0;" src="<%= video.display_url %>" frameborder="0" allowfullscreen></iframe>
  <div class="clearfix"></div>
</div>
