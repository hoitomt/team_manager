<h1><%= @team.name %></h1>

<div class="mt-3">
  <div class="float-left">
    <h2>Roster</h2>
  </div>
  <div class="float-right">
    <%= link_to 'New Player', new_team_player_path(@team), class:"btn btn-success" %>
  </div>
</div>

<table class="table table-striped">
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Position</th>
    <th>School</th>
    <th></th>
  </tr>
  <% @team.players.each do |player| %>
    <tr>
      <td><%= player.number %></td>
      <td><%= player.name %></td>
      <td><%= player.position %></td>
      <td><%= player.school %></td>
      <td class="text-right">
        <%= link_to 'Manage', team_player_path(@team, player), class: 'btn btn-primary' %>
      </td>
    </tr>
  <% end %>
</table>
