<div class="mt-3">
  <div class="float-left">
    <h1>Teams</h1>
  </div>
  <div class="float-right">
    <% if user_signed_in? %>
      <%= link_to 'New Team', new_team_path, class:"btn btn-success" %>
    <% end %>
  </div>
</div>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Coach</th>
    <th>Year</th>
    <th>Active</th>
    <th></th>
  </tr>
  <% @teams.all.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.coach %></td>
      <td><%= team.year %></td>
      <td><%= team.active? %></td>
      <td><%= link_to 'Manage', team_path(team), class: 'btn btn-primary' %></td>
    </tr>
  <% end %>
</table>
